@model Book
@{
    ViewData["Title"] = "Kitap ekleme ekranı";
}
@if(ViewBag.error!=null){
    <div class="alert-danger" id="alert-danger">
        @ViewBag.error
    </div>
    ViewBag.error = null;
}
<body class="bg-warning">
    <div class="container mt-5">
        <h3 class="mt-3">Yeni kitap ekleme ekranı</h3>
        <form asp-action="addbook" method="post" enctype="multipart/form-data">
          <div class="form-group">
            <span asp-validation-for="BookName"></span><br />
            <label asp-for="BookName">Kitap ismi</label>
            <input asp-for="BookName" type="text" class="form-control" placeholder="Kitap ismi">
          </div>
            <div class="form-group">
                <span asp-validation-for="BookAuthor"></span><br />
            <label asp-for="BookAuthor">Kitabın Yazarı</label>
            <input asp-for="BookAuthor" type="text" class="form-control" placeholder="Kitabın yazarı">
          </div>
          <div class="form-group">
            <label>Kitap ismi</label>
            <input type="file" class="form-control" name="kitapGorsel">
          </div>

          <input type="submit" class="btn btn-success"/>
      
    </form>
    </div>
</body>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
<script>
    setTimeout(() => {
        $("#alert-danger").css("display","none");
    },2000);
</script>